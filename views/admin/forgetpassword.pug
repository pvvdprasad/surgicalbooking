style.
    .did-floating-label-content {
        position:relative;
        margin-bottom:20px;
    }
    .input-group {
        display: flex;
        .did-floating-input{
            border-radius:0 4px 4px 0;
            border-left:0;
            padding-left:0;
        }
    }
    .did-floating-input:not(:placeholder-shown) ~ .did-floating-label {
        top:-8px;
        font-size:13px;
    }
    .did-floating-input, .did-floating-select {
        font-size:12px;
        display:block;
        width:100%;
        height:36px;
        padding: 0 20px;
        background: #fff;
        color: #323840;
        border: 1px solid #3D85D8;
        border-radius: 4px;
        box-sizing: border-box;
        &:focus{
            outline:none;
            ~ .did-floating-label{
                top:-8px;
                font-size:13px;
            }
        }
    }
